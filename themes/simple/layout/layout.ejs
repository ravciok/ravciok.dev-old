<!DOCTYPE html>
<html lang='<%- config.language %>'>
    <head>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-TZRNDSTJS1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-TZRNDSTJS1');
        </script>

        <meta charset='utf-8' />
        <meta name="description" content="<%- config.description %>">
        <meta name="keywords" content="<%- config.keywords %>">
        <meta name="author" content="<%- config.author %>">
        <meta http-equiv='x-ua-compatible' content='ie=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1, user-scalable=no' />
        <meta name='color-scheme' content='dark light'>

        <% if (is_post()) { %>
            <title><%- page.title %> – <%- config.title %></title>
        <% } else { %>
            <title><%- config.title %> – <%- config.subtitle %></title>
        <% } %>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

        <% if (is_post()) { %>
            <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;500;700&display=swap" rel="stylesheet">
        <% } %>

        <%- favicon_tag('images/favicon.png') %>

        <%- css('https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css') %>
        <%- css('css/main.css') %>
        <% if (is_post()) { %>
            <%- css('css/post.css') %>
        <% } %>

        <%- js('js/main.js') %>
    </head>
    <body>
        <div class="container d-flex flex-column" style="max-width: 800px">

            <%- partial('partial/header') %>

            <div class="row">
                <div class="col">
                    <%- body %>
                </div>
            </div>

            <%- partial('partial/footer') %>
        </div>
    </body>
</html>
